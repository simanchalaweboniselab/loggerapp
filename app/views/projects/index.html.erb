<table class="table table-striped table-bordered">
  <colgroup>
    <col class="span3">
    <col class="span3">
    <col class="span3">
  </colgroup>
  <caption>
    <h2>Project List</h2>
  </caption>
  <thead>
  <tr>
    <th style="width: 20%;">Id</th>
    <th style="width: 40%;">Name</th>
    <th style="width: 40%; text-align: center;"><%= link_to "Add Project", new_project_path, :class => "btn btn-success" %></th>
  </tr>
  </thead>
  <% @projects.each do |project| %>
      <tr>
        <td><%= project.id %></td>
        <td><%= project.name %></td>
        <td style="text-align: center;">
          <%= link_to "send mail", send_mail_project_path(project), :class => "btn btn-success" %>
          <%= link_to "Delete", project_path(project), :method => "delete", :confirm => "Are you sure you want to delete #{project.name}?",:class => "btn btn-success" %>
        </td>
      </tr>
  <% end %>
</table>